<div class="container">
  <h1 align="center">Listing Articles</h1>

  <table class="table table-striped table-hover">
    <tr>
      <th>Title</th>
      <th>Flag</th>
      <th>Text</th>
      <th colspan="4"></th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.picture %></td>
      <td><%= article.text %></td>
      <td><%= link_to '<button type="button" class="btn btn-primary">Show</button>'.html_safe, article_path(article) %></td>
      <td><%= link_to '<button type="button" class="btn btn-primary">Edit</button>'.html_safe, edit_article_path(article) %></td>
      <td><%= link_to '<button type="button" class="btn btn-primary">Delete</button>'.html_safe, article_path(article),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>

  </table></br>
  <%= link_to '<button type="button" class="btn btn-primary">New Article</button>'.html_safe, new_article_path %>
  <%= link_to '<button type="button" class="btn btn-primary">All Articles</button>'.html_safe, articles_path %>
</div>

