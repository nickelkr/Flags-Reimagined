<%= render "layouts/header" %>
<style>
.col-md-10 {
    width: 100%;

}

.image{
  border-style: solid;
    border-width: 1px;
    margin: 0px;
padding: 0px;
}

.panel-primary>.panel-heading {
    background-image: -webkit-linear-gradient(top,#000000 0,#000000 100%);
    background-image: linear-gradient(to bottom,#f5f5f5 0,#f5f5f5 100%);
    background-repeat: repeat-x;
}
.panel-primary>.panel-heading {
    color: #000000;
    background-color: #000000;
    border-color: #eeeeee;
}
.fa {
    color: black;
}
</style>

        <div class="container">





          <% @articles.each do |article| %>
          <div class="row">
            <div class="col-md-10 panel-primary">
              <div class="content-box-header panel-heading">
                <div class="panel-title"> <a href="<%= article_path(article) %>"> <%= article.title %>  </a></div>

                <div class="panel-options">
                  <a href="#" data-rel="reload">
                    <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_article_path(article) %>
                    
                  </a>

                  <a href="#" data-rel="collapse">


                    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
                  </a>

                  
                </div>
              </div>
              <div class="content-box-large box-with-header">
                <div class="">
                  <img src="http://www.ederflag.com/media/k2/galleries/182/chicago.jpg" class = "image" width="322" height="200"></img>
                </div><br><br>
                <%= article.text %>
                <br><br>
                
              </div>
              
            </div>
          </div>
          <% end %>


          <%= link_to '<button type="button" class="btn btn-primary">New Article</button>'.html_safe, new_article_path %>
          <%= link_to '<button type="button" class="btn btn-primary">All Articles</button>'.html_safe, articles_path %>
        </div></br></br>

