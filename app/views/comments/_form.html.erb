<% builds =  @comment ? [@article, @comment] : [@article, @article.comments.build] %>

<%= form_for(builds) do |f| %>

<p>
  <%= f.label :commenter %><br>
  <%= f.text_field :commenter %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit class: 'btn btn-primary'%>
</p>
<% end %>
